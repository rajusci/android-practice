<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextDarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/dark_color_control_text_color</item>
        <item name="android:textColorHint">@color/dark_color_control_hint_color</item>
        <item name="colorControlNormal">@color/dark_color_control_normal</item>
        <item name="colorControlActivated">@color/dark_color_control_activated</item>
        <item name="colorControlHighlight">@color/dark_color_control_highlight</item>
    </style>

    <style name="EditTextDarkStyle"  parent="Widget.AppCompat.EditText">

        <item name="android:textColor">@color/dark_color_control_text_color</item>
        <item name="android:textColorHint">@color/dark_color_control_hint_color</item>
        <item name="android:theme">@style/EditTextDarkTheme</item>
        <item name="colorControlNormal">@color/dark_color_control_normal</item>
        <item name="colorControlActivated">@color/dark_color_control_activated</item>
        <item name="colorControlHighlight">@color/dark_color_control_highlight</item>
    </style>

</resources>
